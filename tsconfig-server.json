{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "allowJs": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "./definitions/**/*",
    "./src/server/**/*"
  ]
}